<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.hisaab.Addexpense">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/action_sign_in"
                android:padding="16dp"
                android:src="@drawable/log_icon" />
            <TextView
                android:id="@+id/addexpense_tag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:text="Add Expense"
                android:textSize="29dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />

            <EditText
                android:id="@+id/expense_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Write Category"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#A4A1A1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <EditText
                android:id="@+id/expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Insert Amount"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#A4A1A1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <EditText
                android:id="@+id/writediscription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="write discription  optional"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#A4A1A1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:textStyle="bold"
                    android:textSize="26dp"
                    android:hint="Select date "
                    android:id="@+id/tvSelectedDate"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Date"

                    android:background="@color/colorPrimaryDark"
                    android:id="@+id/btnDate"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:textAllCaps="false"
                android:paddingBottom="0dp"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
