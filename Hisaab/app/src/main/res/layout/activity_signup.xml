<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.hisaab.Signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/action_sign_in"
                android:padding="16dp"
                android:src="@drawable/log_icon" />
            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:text="SignUp Account "
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="29dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="UserName"
                android:inputType="text"
                android:maxLines="1"
                android:padding="8dp"
                android:drawableRight="@drawable/person"
                android:textColorHint="#A4A1A1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Email Adress"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#A4A1A1"
                android:drawableRight="@drawable/gmail"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/User_arrays"
                android:maxLines="1"
                android:padding="8dp"
                android:prompt="@string/country_prompt"
                android:textAlignment="center"
                android:textColorHint="#000"

                android:textStyle="bold" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Passward"
                android:inputType="textPassword"
                android:drawableRight="@drawable/lock"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#A4A1A1"
                android:textStyle="bold"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="Enter Passward Again"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#A4A1A1"
                android:textStyle="bold"
                android:drawableRight="@drawable/lock"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#f9d7db"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/signup"
                android:layout_marginTop="10dp"
                android:text="Save"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:textAllCaps="false"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>
